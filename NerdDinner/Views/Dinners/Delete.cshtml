@model NerdDinner.Models.Dinner

@{
    ViewBag.Title = "Delete Confirmation";
}

<h2>Delete Confirmation</h2>

<h3>Please confirm you want to cancel the dinner title: <i>@Html.DisplayFor(model => model.Title)</i>.</h3>
